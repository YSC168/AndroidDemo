<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jinhui.androiddemo.MainActivity">


    <Button
        android:id="@+id/bt_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="常用Widget与布局文件" />

    <Button
        android:id="@+id/bt_listener"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="监听事件、资源文件" />

    <Button
        android:id="@+id/bt_interface"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="界面、界面跳转" />

    <Button
        android:id="@+id/bt_interface2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="界面跳转2" />

    <Button
        android:id="@+id/bt_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activity生命周期/启动模式/状态保存/序列化" />

    <Button
        android:id="@+id/bt_day6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="day6" />

    <Button
        android:id="@+id/bt_day7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="day7" />

    <Button
        android:id="@+id/bt_day8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="day8" />

    <Button
        android:id="@+id/bt_day9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="day9" />
</LinearLayout>
