<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/breath_anim">

    <!--android:background="@android:color/transparent"-->
    <Button
        android:id="@+id/bt_eye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_nose"
        android:layout_alignStart="@+id/bt_nose"
        android:layout_marginBottom="48dp"
        android:text="眼睛"/>

    <Button
        android:id="@+id/bt_nose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_swipe_left"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp"
        android:text="呼吸"/>

    <Button
        android:id="@+id/bt_fart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="dog"/>


    <Button
        android:id="@+id/bt_swipe_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_poke_foot"
        android:layout_marginBottom="95dp"
        android:layout_toEndOf="@+id/bt_fart"
        android:text="left"/>

    <Button
        android:id="@+id/bt_poke_foot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bt_nose"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        android:text="foot"/>

</RelativeLayout>